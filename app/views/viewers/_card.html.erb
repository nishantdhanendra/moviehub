<div class="card mb-3">
  <h2 class="card-header h4">
    Viewer #<%= viewer.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Movie</dt>
      <!-- Display movie_id start -->
      <dd><%= viewer.movie_id %></dd>
      <!-- Display movie_id end -->

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back viewer, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <!-- Edit link viewer start -->
      <div class="col">
        <%= link_to edit_viewer_url(viewer), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>
      <!-- Edit link viewer end -->

      <!-- Delete link viewer start -->
      <div class="col">
        <%= link_to viewer, method: :delete, data: { confirm: "Do you really want to delete this viewer?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
      <!-- Delete link viewer end -->
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(viewer.updated_at) %> ago
  </div>
</div>
